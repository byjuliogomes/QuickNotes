{
    "manifest_version": 3,
    "name": "QuickNotes",
    "version": "1.0",
    "description": "Um plugin que permite aos usu√°rios criar notas simples e lembretes que podem ser acessados facilmente com um clique na barra de ferramentas do navegador.",
    "icons": {
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "action": {
      "default_popup": "index.html"
    },
    "permissions": ["storage"],
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["script.js"],
        "css": ["styles.css"]
      }
    ],
    "browser_action": {
      "default_icon": {
        "48": "icon48.png",
        "128": "icon128.png"
      },
      "default_title": "QuickNotes",
      "default_popup": "popup.html"
    }
  }
  